<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Register</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" name="Username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="PasswordHash" class="form-label">Password</label>
                <input type="password" name="PasswordHash" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="AvatarFile" class="form-label">Avatar</label>
                <input type="file" name="AvatarFile" class="form-control" accept="image/*" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
        <p class="text-center mt-3">
            Already have an account? <a href="/Account/Login">Login</a>
        </p>
    </div>
</div>